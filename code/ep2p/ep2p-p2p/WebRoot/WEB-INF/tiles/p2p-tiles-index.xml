<tiles-definitions>
	<!-- 基础模板 -->
	<definition name="temp.index.base" template="/WEB-INF/templates/mainframe.jsp">
		<put-attribute name="headmeta" value="/layout/headmeta.jsp"></put-attribute>
		<put-attribute name="navsmall" value="/WEB-INF/view/homepage/navsmall.jsp"></put-attribute>
		<put-attribute name="remindtip" value="/layout/remindtip.jsp"></put-attribute>
		<put-attribute name="servicebar" value="/layout/servicebar.jsp"></put-attribute>
		<put-attribute name="mainmenu" value="/WEB-INF/view/homepage/mainmenu.jsp"></put-attribute>
		<put-attribute name="footer" value="/layout/footer.jsp"></put-attribute>
	</definition>
	
	<!-- 首页 -->
	<definition name="index.page" extends="temp.index.base">
		<put-attribute name="banner" value="/WEB-INF/view/homepage/banner.jsp"></put-attribute>
		<put-attribute name="statisticsdata" value="/WEB-INF/view/homepage/statisticsdata.jsp"></put-attribute>
		<put-attribute name="safetip" value="/WEB-INF/view/homepage/safetipdiv.jsp"></put-attribute>
		<put-attribute name="activitywrap" value="/WEB-INF/view/homepage/activitywrap.jsp"></put-attribute>
		<put-attribute name="content" value="/WEB-INF/view/homepage/content.jsp"></put-attribute>
		<put-attribute name="newsdynamic" value="/WEB-INF/view/homepage/newsdynamic.jsp"></put-attribute>
	</definition>
	
	
	<!-- 手机专题页面-->
	<definition name="mobileSpecial.page" extends="temp.index.base">
		<put-attribute name="banner" value=""></put-attribute>
		<put-attribute name="statisticsdata" value=""></put-attribute>
		<put-attribute name="safetip" value=""></put-attribute>
		<put-attribute name="activitywrap" value=""></put-attribute>
		<put-attribute name="content" value="/WEB-INF/view/helpcenter/mobileSpecial.jsp"></put-attribute> 
		<put-attribute name="newsdynamic" value=""></put-attribute>
	</definition>
	
</tiles-definitions>